  <!doctype html>
  <html lang="en">
    <!-- im just setting up bootstrap here dont worry too much about this section -->
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>Solos AI demo</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>

<body>


  <h1>Chat with GPT-3.5</h1>



  <div class="gpt-form">
      <div class="card">
        <div class="card-body d-flex align-items-center" style="background-color: rgba(152, 251, 207, 0.72)">
        <img src="https://static.vecteezy.com/system/resources/previews/021/059/827/non_2x/chatgpt-logo-chat-gpt-icon-on-white-background-free-vector.jpg" alt="" style="width: 50px; height: 50px; border-radius: 50%;">
        <% if @content['data'] %>
          <p class="m-0 mx-3"><%= @content['data'][0]['url'] %></p>
          <img src="<%= @content['data'][0]['url'] %>" alt="">
        <% else %>
          <p class="m-0 mx-3">Ask me something!</p>
        <% end %>
      </div>
    </div>

    <div class="mt-5">
      <%= form_with url: chat_post_path, method: :post, id: "chat_form", local: false do |form| %>
        <%= label_tag :message, "Write something below", class: 'form-label' %>
        <%= text_area_tag :message, nil, class: 'form-control', rows: 3, required: true %>
        <div class="mt-3">
            <%= submit_tag "Submit", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>

    <div class="mt-5">
        <%= link_to '<button class="btn btn-warning">Back to explanation</button>'.html_safe, root_path %>
    </div>

  </div>

</body>
